services:
  # ---- Coolify dependencies ----
  coolify-db:
    image: postgres:15
    container_name: coolify-db
    environment:
      - POSTGRES_DB=coolify
      - POSTGRES_USER=coolify
      - POSTGRES_PASSWORD=coolify
    volumes:
      - /data/coolify/db:/var/lib/postgresql/data
    networks: [observability]
    restart: unless-stopped

  coolify-redis:
    image: redis:7-alpine
    container_name: coolify-redis
    command: ["redis-server","--appendonly","yes"]
    volumes:
      - /data/coolify/redis:/data
    networks: [observability]
    restart: unless-stopped

  # ---- Coolify app ----
  coolify:
    image: coollabsio/coolify:latest
    container_name: coolify
    depends_on: [coolify-db, coolify-redis]
    networks: [observability]
    ports:"8443:8443"
    volumes:
      - /data/coolify:/data
    environment:
      - APP_URL=http://10.0.1.15:8000
      - DB_CONNECTION=pgsql
      - DB_HOST=coolify-db
      - DB_PORT=5432
      - DB_DATABASE=coolify
      - DB_USERNAME=coolify
      - DB_PASSWORD=coolify
      - REDIS_HOST=coolify-redis
      - REDIS_PORT=6379
    restart: unless-stopped

  # ---- Your existing cAdvisor (kept as-is) ----
  cadvisor:
    image: gcr.io/cadvisor/cadvisor:latest
    container_name: cadvisor
    networks:
      - observability
    ports:
      - "8080:8080"
    volumes:
      - /:/rootfs:ro
      - /var/run:/var/run:ro
      - /sys:/sys:ro
      - /var/lib/docker/:/var/lib/docker:ro
    restart: unless-stopped

networks:
  observability:
    external: true


